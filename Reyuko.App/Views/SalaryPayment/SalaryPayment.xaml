                <local:BindingProxy x:Key="ColumnCheckedProxy11" Data="{Binding DepartmenColumnChecked}"/>
                <local:BindingProxy x:Key="ColumnCheckedProxy12" Data="{Binding ProjectColumnChecked}"/>
